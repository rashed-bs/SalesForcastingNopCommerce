@model ProductGroupModel

<div class="card-body">
    <div id="product-group-info-area">
        
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="GroupName" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="GroupName" />
                <span asp-validation-for="GroupName"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="IsActive" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="IsActive" />
                <span asp-validation-for="IsActive"></span>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-md-3">
                <nop-label asp-for="DiscountAppliedFrequently" />
            </div>
            <div class="col-md-9">
                <nop-editor asp-for="DiscountAppliedFrequently" />
                <span asp-validation-for="DiscountAppliedFrequently"></span>
            </div>
        </div>
    </div>
</div>